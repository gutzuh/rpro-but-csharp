<Window x:Class="RPRO.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:vm="clr-namespace:RPRO.App.ViewModels"
        xmlns:views="clr-namespace:RPRO.App.Views"
        mc:Ignorable="d"
        Title="Cortez - Sistema de Produção" 
        Height="800" Width="1280"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Style="{StaticResource MaterialDesignWindow}">

    <Window.Resources>
        <!-- DataTemplates para navegação automática -->
        <DataTemplate DataType="{x:Type vm:DashboardRacaoViewModel}">
            <views:DashboardRacaoView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:DashboardAmendoimViewModel}">
            <views:DashboardAmendoimView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:RelatorioViewModel}">
            <views:RelatorioView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ConfiguracoesViewModel}">
            <views:ConfiguracoesView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:CollectorViewModel}">
            <views:CollectorView />
        </DataTemplate>
    </Window.Resources>

    <materialDesign:DrawerHost IsLeftDrawerOpen="{Binding IsMenuOpen}">
        
        <!-- Sidebar / Menu Lateral -->
        <materialDesign:DrawerHost.LeftDrawerContent>
            <DockPanel Width="280" Background="{DynamicResource MaterialDesign.Brush.Primary}">
                
                <!-- Logo e Título -->
                <StackPanel DockPanel.Dock="Top" Margin="16">
                    <TextBlock Text="Cortez" 
                               FontSize="24" FontWeight="Bold" 
                               Foreground="White" 
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Sistema de Produção" 
                               FontSize="12" 
                               Foreground="#CCFFFFFF" 
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <Separator DockPanel.Dock="Top" Background="#33FFFFFF"/>

                <!-- Menu Items -->
                <ListBox DockPanel.Dock="Top" 
                         ItemsSource="{Binding MenuItems}"
                         SelectedItem="{Binding SelectedMenuItem}"
                         Background="Transparent"
                         Margin="8">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="8">
                                <materialDesign:PackIcon Kind="{Binding Icon}" 
                                                         Width="24" Height="24" 
                                                         Foreground="White"
                                                         VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Title}" 
                                           Foreground="White" 
                                           FontSize="14"
                                           Margin="16,0,0,0"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem" BasedOn="{StaticResource MaterialDesignListBoxItem}">
                            <Setter Property="Padding" Value="8"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#33FFFFFF"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>

                <!-- Usuário Logado (Footer) -->
                <Border DockPanel.Dock="Bottom" 
                        Background="#22000000" 
                        Padding="16"
                        Visibility="{Binding CurrentUser, Converter={StaticResource NullToVisibilityConverter}}">
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="40" Height="40" Fill="LightGray"/>
                        <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="{Binding CurrentUser.DisplayName}" 
                                       Foreground="White" 
                                       FontWeight="Medium"/>
                            <TextBlock Text="{Binding CurrentUser.UserType}" 
                                       Foreground="#AAFFFFFF" 
                                       FontSize="11"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </DockPanel>
        </materialDesign:DrawerHost.LeftDrawerContent>

        <!-- Conteúdo Principal -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Bar -->
            <materialDesign:ColorZone Grid.Row="0" 
                                       Mode="PrimaryMid" 
                                       Padding="16"
                                       materialDesign:ElevationAssist.Elevation="Dp2">
                <DockPanel>
                    <Button DockPanel.Dock="Left"
                            Command="{Binding ToggleMenuCommand}"
                            Style="{StaticResource MaterialDesignIconButton}"
                            Foreground="White">
                        <materialDesign:PackIcon Kind="Menu" Width="24" Height="24"/>
                    </Button>

                    <TextBlock Text="{Binding SelectedMenuItem.Title}" 
                               VerticalAlignment="Center"
                               Margin="16,0,0,0"
                               FontSize="18"
                               FontWeight="Medium"
                               Foreground="White"/>

                    <Button DockPanel.Dock="Right"
                            Command="{Binding LogoutCommand}"
                            Style="{StaticResource MaterialDesignIconButton}"
                            Foreground="White"
                            ToolTip="Sair">
                        <materialDesign:PackIcon Kind="Logout" Width="24" Height="24"/>
                    </Button>
                </DockPanel>
            </materialDesign:ColorZone>

            <!-- Área de Conteúdo -->
            <ContentControl Grid.Row="1" Content="{Binding CurrentView}"/>
        </Grid>
    </materialDesign:DrawerHost>
</Window>
