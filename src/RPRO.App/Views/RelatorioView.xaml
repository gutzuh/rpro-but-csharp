<UserControl x:Class="RPRO.App.Views.RelatorioView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="{DynamicResource MaterialDesign.Brush.Background}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Loading Overlay -->
        <Grid Grid.RowSpan="4"
              Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
              Panel.ZIndex="100"
              Background="#88FFFFFF">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                             IsIndeterminate="True"
                             Width="50" Height="50"/>
                <TextBlock Text="Carregando dados..." 
                           Margin="0,16,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Cabeçalho -->
        <materialDesign:Card Grid.Row="0" Padding="16" Margin="16,16,16,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Visualização de Dados" 
                               Style="{StaticResource MaterialDesignHeadline5TextBlock}"/>
                    <TextBlock Foreground="Gray" FontSize="12">
                        <Run Text="Total: "/>
                        <Run Text="{Binding TotalItens, StringFormat={}{0:N0}}" FontWeight="Bold"/>
                        <Run Text=" registros"/>
                    </TextBlock>
                </StackPanel>

                <!-- Seletor de Tipo -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <RadioButton Content="Ração" 
                                 Style="{StaticResource MaterialDesignTabRadioButton}"
                                 IsChecked="{Binding TipoVisualizacao, Converter={StaticResource EqualityConverter}, ConverterParameter=racao}"
                                 Margin="0,0,8,0"/>
                    <RadioButton Content="Amendoim" 
                                 Style="{StaticResource MaterialDesignTabRadioButton}"
                                 IsChecked="{Binding TipoVisualizacao, Converter={StaticResource EqualityConverter}, ConverterParameter=amendoim}"/>
                </StackPanel>
            </Grid>
        </materialDesign:Card>

        <!-- Filtros -->
        <materialDesign:Card Grid.Row="1" Padding="16" Margin="16,8,16,8">
            <Expander Header="Filtros" IsExpanded="True">
                <StackPanel Margin="0,16,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <DatePicker Grid.Column="0"
                                    SelectedDate="{Binding DataInicio}"
                                    materialDesign:HintAssist.Hint="Data Início"
                                    Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                                    Margin="0,0,8,0"/>

                        <DatePicker Grid.Column="1"
                                    SelectedDate="{Binding DataFim}"
                                    materialDesign:HintAssist.Hint="Data Fim"
                                    Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                                    Margin="8,0,8,0"/>

                        <!-- Filtros específicos de Ração -->
                        <TextBox Grid.Column="2"
                                 Text="{Binding FiltroFormula, UpdateSourceTrigger=PropertyChanged}"
                                 materialDesign:HintAssist.Hint="Fórmula"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Margin="8,0,8,0"
                                 Visibility="{Binding TipoVisualizacao, Converter={StaticResource EqualityToVisibilityConverter}, ConverterParameter=racao}"/>

                        <TextBox Grid.Column="3"
                                 Text="{Binding FiltroCodigo, UpdateSourceTrigger=PropertyChanged}"
                                 materialDesign:HintAssist.Hint="Código"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Margin="8,0,8,0"
                                 Visibility="{Binding TipoVisualizacao, Converter={StaticResource EqualityToVisibilityConverter}, ConverterParameter=racao}"/>

                        <!-- Filtros específicos de Amendoim -->
                        <ComboBox Grid.Column="2"
                                  SelectedValue="{Binding FiltroTipoAmendoim}"
                                  SelectedValuePath="Tag"
                                  materialDesign:HintAssist.Hint="Tipo"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                  Margin="8,0,8,0"
                                  Visibility="{Binding TipoVisualizacao, Converter={StaticResource EqualityToVisibilityConverter}, ConverterParameter=amendoim}">
                            <ComboBoxItem Content="Todos" Tag=""/>
                            <ComboBoxItem Content="Entrada" Tag="entrada"/>
                            <ComboBoxItem Content="Saída" Tag="saida"/>
                        </ComboBox>

                        <StackPanel Grid.Column="4" Orientation="Horizontal">
                            <Button Command="{Binding AplicarFiltrosCommand}"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Margin="8,0,4,0">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Magnify" VerticalAlignment="Center"/>
                                    <TextBlock Text="Filtrar" Margin="8,0,0,0"/>
                                </StackPanel>
                            </Button>

                            <Button Command="{Binding LimparFiltrosCommand}"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Margin="4,0,0,0"
                                    ToolTip="Limpar Filtros">
                                <materialDesign:PackIcon Kind="FilterRemove"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Expander>
        </materialDesign:Card>

        <!-- Tabela de Dados -->
        <materialDesign:Card Grid.Row="2" Margin="16,8,16,8">
            <Grid>
                <!-- Tabela Ração -->
                <DataGrid ItemsSource="{Binding DadosRacao}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          CanUserSortColumns="True"
                          CanUserReorderColumns="True"
                          Visibility="{Binding TipoVisualizacao, Converter={StaticResource EqualityToVisibilityConverter}, ConverterParameter=racao}"
                          VirtualizingPanel.IsVirtualizing="True"
                          VirtualizingPanel.VirtualizationMode="Recycling"
                          EnableRowVirtualization="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Dia" Binding="{Binding Dia}" Width="90"/>
                        <DataGridTextColumn Header="Hora" Binding="{Binding Hora}" Width="70"/>
                        <DataGridTextColumn Header="Fórmula" Binding="{Binding Formula}" Width="200"/>
                        <DataGridTextColumn Header="Código" Binding="{Binding Codigo}" Width="70"/>
                        <DataGridTextColumn Header="Número" Binding="{Binding Numero}" Width="70"/>
                        <DataGridTextColumn Header="Total (kg)" Binding="{Binding Total, StringFormat={}{0:N2}}" Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Tabela Amendoim -->
                <DataGrid ItemsSource="{Binding DadosAmendoim}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          CanUserSortColumns="True"
                          Visibility="{Binding TipoVisualizacao, Converter={StaticResource EqualityToVisibilityConverter}, ConverterParameter=amendoim}"
                          VirtualizingPanel.IsVirtualizing="True"
                          VirtualizingPanel.VirtualizationMode="Recycling"
                          EnableRowVirtualization="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Tipo" Binding="{Binding TipoFormatado}" Width="100"/>
                        <DataGridTextColumn Header="Dia" Binding="{Binding Dia}" Width="90"/>
                        <DataGridTextColumn Header="Hora" Binding="{Binding Hora}" Width="70"/>
                        <DataGridTextColumn Header="Cód. Produto" Binding="{Binding CodigoProduto}" Width="100"/>
                        <DataGridTextColumn Header="Produto" Binding="{Binding NomeProduto}" Width="200"/>
                        <DataGridTextColumn Header="Peso" Binding="{Binding PesoFormatado}" Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Balança" Binding="{Binding Balanca}" Width="70"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Mensagem quando vazio -->
                <StackPanel VerticalAlignment="Center" 
                            HorizontalAlignment="Center"
                            Visibility="{Binding TotalItens, Converter={StaticResource ZeroToVisibilityConverter}}">
                    <materialDesign:PackIcon Kind="TableOff" Width="64" Height="64" Foreground="Gray"/>
                    <TextBlock Text="Nenhum registro encontrado" 
                               Foreground="Gray" 
                               FontSize="16"
                               Margin="0,16,0,0"/>
                    <TextBlock Text="Ajuste os filtros e tente novamente" 
                               Foreground="Gray" 
                               FontSize="12"/>
                </StackPanel>
            </Grid>
        </materialDesign:Card>

        <!-- Paginação e Ações -->
        <materialDesign:Card Grid.Row="3" Padding="16" Margin="16,8,16,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Exportação -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Command="{Binding ExportarExcelCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="MicrosoftExcel" VerticalAlignment="Center"/>
                            <TextBlock Text="Exportar Excel" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding ExportarPdfCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FilePdfBox" VerticalAlignment="Center"/>
                            <TextBlock Text="Exportar PDF" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Paginação -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Command="{Binding PrimeiraPaginaCommand}"
                            Style="{StaticResource MaterialDesignIconButton}"
                            IsEnabled="{Binding PaginaAtual, Converter={StaticResource GreaterThanOneConverter}}"
                            ToolTip="Primeira Página">
                        <materialDesign:PackIcon Kind="PageFirst"/>
                    </Button>

                    <Button Command="{Binding PaginaAnteriorCommand}"
                            Style="{StaticResource MaterialDesignIconButton}"
                            IsEnabled="{Binding PaginaAtual, Converter={StaticResource GreaterThanOneConverter}}"
                            ToolTip="Página Anterior">
                        <materialDesign:PackIcon Kind="ChevronLeft"/>
                    </Button>

                    <TextBlock VerticalAlignment="Center" Margin="16,0">
                        <Run Text="Página "/>
                        <Run Text="{Binding PaginaAtual}" FontWeight="Bold"/>
                        <Run Text=" de "/>
                        <Run Text="{Binding TotalPaginas}" FontWeight="Bold"/>
                    </TextBlock>

                    <Button Command="{Binding ProximaPaginaCommand}"
                            Style="{StaticResource MaterialDesignIconButton}"
                            ToolTip="Próxima Página">
                        <materialDesign:PackIcon Kind="ChevronRight"/>
                    </Button>

                    <Button Command="{Binding UltimaPaginaCommand}"
                            Style="{StaticResource MaterialDesignIconButton}"
                            ToolTip="Última Página">
                        <materialDesign:PackIcon Kind="PageLast"/>
                    </Button>

                    <Separator Margin="16,0"/>

                    <ComboBox SelectedValue="{Binding ItensPorPagina}"
                              SelectedValuePath="Tag"
                              materialDesign:HintAssist.Hint="Itens/Página"
                              Width="100">
                        <ComboBoxItem Content="25" Tag="25"/>
                        <ComboBoxItem Content="50" Tag="50"/>
                        <ComboBoxItem Content="100" Tag="100"/>
                        <ComboBoxItem Content="200" Tag="200"/>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </materialDesign:Card>
    </Grid>
</UserControl>